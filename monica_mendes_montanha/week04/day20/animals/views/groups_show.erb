<h2><%= @group.name %></h2>
<% unless @group.animals.empty? %>
  <h3>Associated Animals</h3>
  <ul>
    <% @group.animals.each do |animal| %>
      <li>
        <a href="/animals/<%= animal.id %>">
          <%= animal.name %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>

<form action="/animals" method="post">
  <input type="hidden" name="group_id" value="<%= @group.id %>">
  <label>
    Name:
    <input type="text" name="name" placeholder="Animal name" required autofocus>
  </label>
  <label>
    Image:
    <input type="text" name="image" placeholder="http://...">
  </label>
  <button>Create animal</button>
</form>

<div class="controls">
  <a href="/groups/<%= @group.id %>/edit">Edit</a>
  <a href="/groups/<%= @group.id %>/delete">Delete</a>
</div>
