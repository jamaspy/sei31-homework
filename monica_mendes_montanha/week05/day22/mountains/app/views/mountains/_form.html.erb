<%= form_for @mountain do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.submit %>
<% end %>