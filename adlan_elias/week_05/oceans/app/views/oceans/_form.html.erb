<%= form_for @ocean do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true %>
  <%= f.label :depth %>
  <%= f.text_field :depth, :placeholder => 'in m' %>
  <%= f.label :volume %>
  <%= f.text_field :volume, :placeholder => 'in km³' %>
  <%= f.label :size %>
  <%= f.text_field :size, :placeholder => 'in km²' %>
  <%= f.label :fact %>
  <%= f.text_field :fact %>
  <%= f.label :image %>
  <%= f.url_field :image %>
  <%= f.submit %>
<% end %>
