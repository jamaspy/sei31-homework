<%= form_for @movie do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true%>
  <br>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <br>
  <%= f.label :released_date %>
  <%= f.text_field :released %>
  <br>
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <br>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <br>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>
  <br>
  <%= f.label :director_id %>
  <%= f.select :director_id, Director.pluck(:name, :id), :include_blank => true %>
  <%= f.submit %>
<% end %>
