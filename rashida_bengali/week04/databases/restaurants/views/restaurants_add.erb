<h2>Create a New Restaurant</h2>

<form action="/restaurants" method="post">
  <label>
    Name:
    <input type="text" name="name" placeholder="Restaurant Name" required autofocus>
  </label>

  <label>
    Cuisine:
    <input type="text" name="cuisine" placeholder="Type of Cuisine">
  </label>

  <label>
    Location:
    <input type="text" name="location" placeholder="Suburb Name">
  </label>

  <label>
    Image:
    <input type="url" name="image" placeholder="http://....">
  </label>

  <button>Add Restaurant</button>

</form>
