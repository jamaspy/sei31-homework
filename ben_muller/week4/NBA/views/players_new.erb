<form class="edit" action="/" method="post">
  <label>
    First Name:
    <input type="text" name="first_name" placeholder="First Name" required autofocus>
  </label>
  
  <label>
    Last Name:
    <input type="text" name="last_name" placeholder="Last Name" required>
  </label>
  
  <label>
    Nickname:
    <input type="text" name="nickname" placeholder="Nickname" required>
  </label>
  
  <label>
    Team:
    <input type="text" name="team" placeholder="Team" required>
  </label>
  
  <label>
    Points Per Game:
    <input type="number" step="0.01" name="ppg" placeholder="PPG" required>
  </label>
  
  <label>
    Rebounds Per Game:
    <input type="number" step="0.1" name="rpg" placeholder="RPG" required>
  </label>
  
  <label>
    Assists Per Game:
    <input type="number" step="0.1" name="apg" placeholder="APG" required>
  </label>
  
  <label>
    Games Played:
    <input type="number" step="0.01" name="games" placeholder="Games Played" required>
  </label>
  
  <label>
    Image:
    <input type="url" name="image" placeholder="http://..." required>
  </label>
  
  <button class="button" >CREATE PLAYER!</button>
  
</form>