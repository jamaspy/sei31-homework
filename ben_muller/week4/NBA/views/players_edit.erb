<h2>Edit Player</h2>

<form action="/players/<%= @players["id"] %>" method="post">
  <label>
    First Name:
    <input type="text" name="first_name" value="<%= @players["first_name"] %> "placeholder="First Name" required autofocus>
  </label>
  
  <label>
    Last Name:
    <input type="text" name="last_name" value="<%= @players["last_name"] %>" placeholder="Last Name" required>
  </label>
  
  <label>
    Nickname:
    <input type="text" name="nickname" value="<%= @players["nickname"] %>" placeholder="Nickname"  required>
  </label>
  
  <label>
    Team:
    <input type="text" name="team" value="<%= @players["team"] %>" placeholder="Team" required>
  </label>
  
  <label>
    Points Per Game:
    <input type="text" step="0.01" value="<%= @players["ppg"].to_f %>" name="ppg" placeholder="PPG" required>
  </label>
  
  <label>
    Rebounds Per Game:
    <input type="number" step="0.1" name="rpg" value="<%= @players["rpg"] %>" placeholder="RPG" required>
  </label>
  
  <label>
    Assists Per Game:
    <input type="number" step="0.1" name="apg" value="<%= @players["apg"] %>" placeholder="APG" required>
  </label>
  
  <label>
    Games Played:
    <input type="number" step="0.01" name="games" value="<%= @players["games"] %>" placeholder="Games Played" required>
  </label>
  
  <label>
    Image:
    <input type="url" name="image" value="<%= @players["image"] %>" placeholder="http://..." required>
  </label>
  
  <button class="button">EDIT PLAYER</button>
  
</form>