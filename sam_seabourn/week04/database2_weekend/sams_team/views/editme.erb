    <input type="text" name="nickname" value="<%= @pokemon["nickname"] %>" placeholder="Sizzly Steve" required autofocus>
    <br>
    <label>Type 1</label>
    <select name="type1" value="<%= @pokemon["type1"] %>" placeholder="Rock">
