<h1>Edit</h1>
<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>
    Name:
    <input type="text" name="name" value="<%= @mountain.name %>" required autofocus>
  </label>

  <label>
    Image:
    <input type="url" name="image" value="<%= @mountain.image %>" placeholder="http://...">
  </label>

  <label>
    Height:
    <input type="number" name="height" value="<%= @mountain.height %>">
  </label>

  <label>
    Location:
    <input type="text" name="location" value="<%= @mountain.location %>">
  </label>

  <button>
    Update Planet
  </button>
</form>
