<h1><%= @mountain.name %></h1>
<% image_tag @mountain.image, :class => 'feature' if @mountain.image.present? %>
<ul>
  <li>Name: <%= @mountain.name %></li>
  <li>Height: <%= @mountain.height %></li>
  <li>Location: <%= @mountain.location %></li>
</ul>
<div class="controls">
  <%= link_to 'Edit', edit_mountain_path(@mountain.id) %>
  <%= link_to 'Delete', mountain_path(@mountain.id), :method => 'delete', :data => { :confirm => "Are you sure?"} %>
</div>
