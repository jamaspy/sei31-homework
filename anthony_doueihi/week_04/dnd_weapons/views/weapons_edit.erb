<h2> Edit <%= @weapon["name"] %></h2>
<form action="/<%= @weapon["id"] %>" method="post">
  <label>
    Name:
   <input type="text" name="name" value="<%= @weapon["name"] %>" placeholder="Weapon Name" required autofocus>
  </label>

  <label>
    Cost:
   <input type="text" name="cost" value="<%= @weapon["cost"] %>" placeholder="Weapon Cost">
  </label>

  <label>
    Damage:
   <input type="text" name="damage" value="<%= @weapon["damage"] %>" placeholder="Damage">
  </label>

  <label>
    Damage Type:
   <input type="text" name="damageType" value="<%= @weapon["damageType"] %>" placeholder="Damage Type">
  </label>

  <label>
    Weight:
   <input type="text" name="weight" value="<%= @weapon["weight"] %>" placeholder="Weapon Weight">
  </label>

  <label>
    Special Properties:
   <input type="text" name="properties" value="<%= @weapon["properties"] %>" placeholder="Special Properties">
  </label>

  <button>Edit Weapon</button>
</form>
