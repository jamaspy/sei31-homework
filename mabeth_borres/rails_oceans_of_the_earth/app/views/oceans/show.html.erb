<h1><%= @ocean.name %></h1>

<%if @ocean.image.present? %><%= image_tag @ocean.image, :class => 'feature' %><% end %>
<br>
    
    Name: <%= @ocean.name %> <br>
    Continents: <br><%= @ocean.continents %> <br>
    Area: <%if @ocean.area.present? %><%= number_to_human @ocean.area %><% end %> sq. kms.<br>
    Volume: <%if @ocean.volume.present? %><%= number_to_human @ocean.volume %><% end %> cu. kms.<br>
	Depth: <%if @ocean.depth.present? %><%= number_to_human @ocean.depth %><% end %> meters <br>
	Known Explorers: <br><%= @ocean.knownexplorers %> <br>
    <br><br>


<div class="controls">
    <%= link_to 'Edit Ocean', edit_ocean_path(@ocean.id) %>
    <%= link_to 'Delete Ocean', ocean_path(@ocean.id), :method => 'delete' %>
</div>

